h1 New Product

= simple_form_for @product do |f|
	.product
		= f.input :name
		h3 Product ingrediants
		#product_ingrediants
			.form_inline
				= f.simple_fields_for :product_ingrediants do |product_ingrediant|
					= render "product_ingrediant_fields", f: product_ingrediant
				.links
					= link_to_add_association "add", f, :product_ingrediants, class: "btn btn-primary btn-xs"
					br/
					br/
				= f.button :submit, class: "btn btn-success btn-sm"

br

= link_to "Back", products_path, class: "btn btn-default btn-sm"				